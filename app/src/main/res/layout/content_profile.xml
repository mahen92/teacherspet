<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mahendran.teacherspet.profileActivity"
    tools:showIn="@layout/activity_profile">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:elevation="6dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:hint="@string/enter_name"
                android:contentDescription="@string/enter_name"
                android:gravity="left"
                android:padding="3dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:elevation="6dp">

            <TextView
                android:id="@+id/mail_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:hint="@string/Enter_mail_ID"
                android:contentDescription="@string/Enter_mail_ID"
                android:gravity="left"
                android:padding="3dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:elevation="6dp">

            <EditText
                android:id="@+id/stud_ph"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:hint="@string/Enter_phone_Number"
                android:contentDescription="@string/Enter_phone_Number"
                android:gravity="left"
                android:padding="3dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:elevation="6dp">

            <EditText
                android:id="@+id/parent_ph"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:hint="@string/Enter_parent_phone_Number"
                android:contentDescription="@string/Enter_parent_phone_Number"
                android:gravity="left"
                android:padding="3dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:elevation="6dp">

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:hint="@string/Enter_address"
                android:contentDescription="@string/Enter_address"
                android:focusable="false"
                android:gravity="left"
                android:padding="3dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="6dp"
            android:elevation="6dp">
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:padding="6dp"
            android:id="@+id/frame"
            android:elevation="12dp">

            <TextView
                android:text="@string/test_name"
                android:contentDescription="@string/test_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="left"
                android:padding="3dp" />
            <TextView
                android:text="@string/Marks"
                android:contentDescription="@string/Marks"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="right"
                android:padding="3dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="6dp"
            android:elevation="6dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00bfff"
            android:id="@+id/profile_tests">

        </ListView>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
