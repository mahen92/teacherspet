<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_student_discussion_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mahendran.teacherspet.DiscussionRoom.StudentDiscussionBoard"
    tools:showIn="@layout/activity_student_discussion_board">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:background="#00bfff"
        android:elevation="1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:elevation="10dp"
            android:background="#ffffff"
            >

            <EditText
                android:id="@+id/Question_from_student"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="@string/Ask_your_question_here"
                android:contentDescription="@string/Ask_your_question_here"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="left"
                android:padding="1dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:elevation="10dp"
            android:background="#000000"
            >
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="6dp"
            android:elevation="10dp">
            <EditText
                android:id="@+id/answer_by_teacher"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="@string/Teacher_Answer"
                android:contentDescription="@string/Teacher_Answer"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="left"
                android:padding="1dp" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
